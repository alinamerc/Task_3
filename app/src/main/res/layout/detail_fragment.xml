<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <RelativeLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_detail">

        <TextView
            android:id="@+id/detail_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textAlignment="gravity"
            android:text="Ivanov"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/detail_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/detail_title_text_view"
            android:background="@android:drawable/ic_dialog_alert"/>

        <TextView
            android:id="@+id/detail_desc_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/detail_title_text_view"
            android:layout_toRightOf="@+id/detail_image_view"
            android:gravity="left"
            android:textAlignment="gravity"
            android:text="desc"
            android:textSize="20dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>